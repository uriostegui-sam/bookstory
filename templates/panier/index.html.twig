{% extends 'bases.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}

	{% block header %}{% endblock %}
	{% block main %}
		<div class="bg-light p-3">
			<h1>Votre panier</h1>
		</div>
		{% if items | length > 0 %}
			<table class="table">
				<thead>
					<tr>
						<th>Livre</th>
						<th>Prix</th>
						<th>QuantitÃ©</th>
						<th>Total</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for item in items %}
						<tr>
							<td>{{ item.livre.titre|capitalize}}</td>
							<td>{{ item.livre.prix}}</td>
							<td>{{ item.quantite}}</td>
							<td>{{ item.livre.prix * item.quantite}}</td>
