{% extends 'bases.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}

		<section class="text-center">
			<h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
			<div class="form-group row">
				<label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
				<div class="col-sm-10">
					<input type="email" placeholder="Email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
				</div>
			</div>
			<div class="form-group row">
				<label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
				<div class="col-sm-10">
					<input type="password" name="password" class="form-control" id="inputPassword" placeholder="Password" autocomplete="current-password" required>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				</div>
			</div>


			{#
														  Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
														   See https://symfony.com/doc/current/security/remember_me.html
														   <div class="checkbox mb-3">
														       <label>
														           <input type="checkbox" name="_remember_me"> Remember me
														       </label>
														   </div>
																							    #}


			<button class=" btn btn-lg btn-primary my-4" type="submit">
				Sign in
			</button>
		</section>

		<br>
		<a href="{{ path('utilisateur_new') }}" class="mx-auto center btn btn-lg btn-info btn-block" type="submit">
			Create un compte âœ¨
		</a>
	</form>
	<br>
{% endblock %}
