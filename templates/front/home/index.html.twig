{% extends 'bases.html.twig' %}

{% block title %}Welcome:)
{% endblock %}

{% block body %}

	{% block header %}{% endblock %}
	{% block main %}
		<h1>Bienvenue</h1>

		<section class="my-4">
			<h1>Les derniers livres</h1>
			<div class="d-flex flex-wrap justify-content-around">
				{% for livre in livres %}
					<div class="card mb-4 text-center" style="width: 18rem;">
						<img class="card-img-top" src="{{ livre.image }}" alt="{{ livre.titre }}">
						<div class="card-body d-flex justify-content-between flex-column ">

							<h2 class="card-title">
								<a href="{{ path('front_livre_show', {'id' : livre.id }) }}">{{ livre.titre }}</a>
							</h2>
							<h3 class="card-text">{{ livre.auteur.nom }}
								{{ livre.auteur.prenom }}</h3>

							<p class="card-text text-justify">{{ livre.description }}</p>
							<p class="card-text">{{ livre.prix }}
								€</p>

							<a href="{{ path('panier_add', {'id': livre.id}) }}" class="btn btn-primary">Ajouter au panier</a>
						</div>
					</div>
				{% endfor %}
			</div>
		</section>

		<section class="my-4">
			<h1>Les dernieres auteurs</h1>
			<div class="d-flex flex-wrap justify-content-around">
				{% for auteur in auteurs %}
					<div class="card mb-4" style="width: 18rem;">
						<div class="card-body">
							<h2 class="card-title">
								<a href="{{ path('front_auteur_show', {'id' : auteur.id }) }}">{{ auteur.prenom }}
									{{ auteur.nom }}</a>
							</h2>
							<p class="card-text">{{ auteur.description }}</p>
						</div>
					</div>
				{% endfor %}
			</div>
		</section>


		<section class="my-4">
			<h1>Les dernieres catégories</h1>
			<div class="d-flex flex-wrap justify-content-around">
				{% for categorie in categories %}
					<div class="card mb-4">
						<div class="card-body">
							<a href="{{ path('front_categorie_show', {'id' : categorie.id }) }}">{{ categorie.titre }}</a>
						</div>
					</div>
				{% endfor %}
			</div>
		</section>

		<hr>


	{% endblock %}

{% endblock %}
